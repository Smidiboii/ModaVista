<!doctype html>
<html lang="fr" data-bs-theme="auto">

<head>
    <%- include ("../partials/head.ejs") %>
</head>

<body>
    <main>
        <div class="container py-4">
            <%- include ("../partials/header.ejs") %>
                <div class="row">
                    <div class="col-md-6">
                        <img src="/assets/img/<%= produit.Nom %>.png" alt="Image" class="img-fluid" style="width:100%;max-height: 400px;object-fit: cover;">
                    </div>

                    <div class="col-md-6">
                        <h1>
                            <%= produit.Nom %>
                        </h1>
                        <h2>
                            <%= produit.Taille %>
                        </h2>
                        <p>
                            <%= produit.Description %>
                        </p>
                        <p><strong><%= produit.Prix %> $</strong>+ taxes</p>
                        <button type="button" class="btn btn-dark">Ajouter au panier</button>
                    </div>
                </div>
        </div>
    </main>
</body>

</html>