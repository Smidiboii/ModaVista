<!DOCTYPE html>
<html>
<%- include ("../partials/head.ejs") %>

    <body onload="afficherInfoProfil()">
        <!-- navbar-->
        <%- include ("../partials/navbar.ejs") %>
            <div id="all">
                <div id="content">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-3">
                                <!--
                    *** CUSTOMER MENU ***
                    _________________________________________________________
                    -->
                                <div class="card sidebar-menu">
                                    <div class="card-header">
                                        <h3 class="h4 card-title">Espace client</h3>
                                    </div>
                                    <div class="card-body">
                                        <ul class="nav nav-pills flex-column">
                                            <a href="#" class="nav-link active"><i class="fa fa-list"></i> Mes
                                                commandes</a><a href="/logout" class="nav-link"><i
                                                    class="fa fa-sign-out"></i> Se déconnecter</a>
                                        </ul>
                                    </div>
                                </div>
                                <!-- /.col-lg-3-->
                                <!-- *** CUSTOMER MENU END ***-->
                            </div>
                            <div id="customer-orders" class="col-lg-9">
                                <div id="contenantInfoUsager" class="box">

                                </div>
                                <div class="box">
                                    <h1>Mes commandes</h1>
                                    <p class="lead">Vos commandes sur un seul endroit.</p>
                                    <p class="text-muted">
                                        Si vous avez des questions, n'hésitez pas à
                                        <a href="#">contactez-nous</a>, notre centre de service client travaille pour
                                        vous 24h/24 et 7j/7.
                                    </p>
                                    <hr />
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Order Id</th>
                                                    <th>Date</th>
                                                    <th>Total</th>
                                                    <th>Status</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% commandes.forEach(function (commande) { %>
                                                    <tr>
                                                        <th>
                                                            <%= commande._id.toString().slice(0, 8) + '...' %>
                                                        </th>
                                                        <td>
                                                            <%= commande.orderDate.toLocaleDateString('en-CA') %>
                                                        </td>
                                                        <td>$
                                                            <%= calculateTotalPrice(commande.produits) %>
                                                        </td>
                                                        <td><span class="badge badge-info">
                                                                <%= commande.etat %>
                                                            </span></td>
                                                    </tr>
                                                    <% }); %>
                                            </tbody>

                                            <% function calculateTotalPrice(produits) { %>
                                                <% var totalPrice=0; %>
                                                    <% produits.forEach(function (produit) { %>
                                                        <% totalPrice +=produit.prix; %>
                                                            <% }); %>
                                                                <%= totalPrice.toFixed(2) %>
                                                                    <% } %>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <script>
                function afficherInfoProfil() {
                    var contenantInfo = document.getElementById("contenantInfoUsager");
                    contenantInfo.innerHTML = `
                   <h1>Mon profil</h1>
                                    <br>
                                    <h3>Nom complet: </h3>
                                    <p>
                                        <%= donneesClient.prenom %>
                                            <%= donneesClient.nom %>
                                    </p>
                                    <h3>Email: </h3>
                                    <p>
                                        <%= donneesClient.email %>
                                    </p>
                                    <button onclick=" afficherProfilModifiable()" class="btn btn-primary">
											<i class="fa fa-pencil"></i> Editer </button>
                   `;
                }

                function afficherProfilModifiable() {
                    var contenantInfo = document.getElementById("contenantInfoUsager");
                    contenantInfo.innerHTML = `
                   <h1>Mon profil</h1>
                                    <br>
                                        <div class="form-group">
                                            <label for="name">Nom</label>
                                            <input id="name" type="text" class="form-control" value="<%= donneesClient.nom %>"/>
                                        </div>
                                        <div class="form-group">
                                            <label for="firstname">Prénom</label>
                                            <input id="firstname" type="text" class="form-control" value="<%= donneesClient.prenom %>" />
                                        </div>
                                        <div class="form-group">
                                            <label for="email">Email</label>
                                            <input id="email" type="text" class="form-control" value="<%= donneesClient.email %>" />
                                        </div>
                                        <div class="text-center">
                                            <button onclick="changerInfo()" class="btn btn-primary">
											<i class="fa fa-hdd-o"></i> Sauvegarder
										</button>
                                        </div>
                    `;
                }

                async function changerInfo() {
                    const name = document.getElementById("name").value;
                    const firstname = document.getElementById("firstname").value;
                    const email = document.getElementById("email").value;
                    console.log(name, firstname, email);
                    const response = await fetch("/api/account", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify({
                            id: "<%= clientId%>",
                            nom: name,
                            prenom: firstname,
                            email: email,
                        }),
                    });

                    if (response.ok) {
                        alert("Vos informations ont été modifiées avec succès");
                        window.location.href = "/account";
                    } else {
                        const responseBody = await response.json();
                        console.error(responseBody);
                        alert(responseBody.message);
                    };

                }

            </script>
            <%- include ("../partials/footer.ejs") %>

                <!-- JavaScript files-->
                <%- include ("../partials/javascript.ejs") %>
    </body>

</html>