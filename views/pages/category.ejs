<!DOCTYPE html>
<html>
	<%- include ("../partials/head.ejs") %>
	<body>
		<!-- navbar-->
		<%- include ("../partials/navbar.ejs") %>
		<div id="all">
			<div id="content">
				<div class="container">
					<div class="row">
						<div class="col-lg-12">
							<!-- breadcrumb-->
							<nav aria-label="breadcrumb">
								<ol class="breadcrumb">
									<li class="breadcrumb-item"><a href="#">Home</a></li>
									<li aria-current="page" class="breadcrumb-item active">
										<%= gender === "H" ? "Hommes" : "Femmes" %>
									</li>
								</ol>
							</nav>
						</div>
						<div class="col-lg-12">
							<div class="box">
								<h1><%= gender === "H" ? "Hommes" : "Femmes" %></h1>
								<p>
									Dans notre rayon, nous proposons une large sélection des meilleurs produits que
									nous ont trouvé et soigneusement sélectionnés dans le monde entier.
								</p>
							</div>

							<div class="row products">
								<% produits.forEach(function(product) { if (product.genre !== gender) { return; } %>
								<div class="col-lg-4 col-md-6">
									<div class="product">
										<a href="/product/<%= product._id %>"
											><img src="/assets/img/<%= product.nom %>.jpg" alt="" class="img-fluid"
										/></a>
										<div class="text">
											<h3><a href="/product/<%= product._id %>"><%= product.nom %></a></h3>
											<p class="price">$<%= product.prix.toFixed(2) %></p>
											<p class="buttons">
												<a href="/product/<%= product._id %>" class="btn btn-outline-secondary"
													>View detail</a
												>
												<a href="basket.html" class="btn btn-primary"
													><i class="fa fa-shopping-cart"></i>Add to cart</a
												>
											</p>
										</div>
										<!-- /.text-->
									</div>
									<!-- /.product -->
								</div>
								<% }); %>
								<!-- /.products-->
							</div>
						</div>
						<!-- /.col-lg-9-->
					</div>
				</div>
			</div>
		</div>
		<%- include ("../partials/footer.ejs") %>

		<!-- JavaScript files-->
		<%- include ("../partials/javascript.ejs") %>
	</body>
</html>
