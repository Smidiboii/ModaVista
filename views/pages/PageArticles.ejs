<%- include ("../partials/header.ejs") %>
    <div class="bg-image"
        style="align-content: center; background-image: url('<%=fondDEcran%>'); background-size: cover; background-repeat: no-repeat; text-align: justify;">

        <br>
        <h2 style="text-align: center; background-color: blanchedalmond;">
            <%=collection %>
        </h2>
        <br>
        <% for(var i=0; i<produits.length; i++) { %>
            <% if((i+1)/4==1 || i==0){ %>
                <div class="row py-5 m-auto" style="max-width:1000px;">
                    <% AfficherCarte(i); %>
                        <% }else{ %>
                            <% AfficherCarte(i); %>
                                <% } %>
                                    <%if((i+1) /3==1 || i+1==produits.length){ %>
                </div>
                <% } %>
                    <% } %>

                        <% function AfficherCarte(i){ %>
                            <div class="col-md-4">
                                <a href="#">
                                    <div class="card">
                                        <img src="../assets/img/IMG_<%=produits[i].NAME.split(" ").join()%>.jpg"
                                            onerror="this.onerror=null; this.src='../<%=imgNonTrouvee%>';"
                                            class="card-img-top">
                                        <div class=" card-body">
                                            <h5 class="card-title">
                                                <%=produits[i].NAME %>
                                            </h5>
                                            <p>
                                                <%=produits[i].PRICE %>$
                                            </p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <% } %>
    </div>
    <%- include ("../partials/footer.ejs") %>